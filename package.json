{
  "name": "eslint-config-zmrl",
  "version": "1.0.0",
  "description": "My ESLint configuration, suitable for most projects.",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zmrl010/eslint-config-zmrl.git"
  },
  "keywords": [
    "eslint",
    "config",
    "lint",
    "shareable config",
    "javascript"
  ],
  "author": "zmrl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zmrl010/eslint-config-zmrl/issues"
  },
  "homepage": "https://github.com/zmrl010/eslint-config-zmrl#readme",
  "scripts": {
    "lint": "eslint",
    "prepare": "pnpm build",
    "test": "pnpm lint",
    "build": "tsc -b",
    "build-test": "pnpm build && pnpm test",
    "clean:types": "rimraf src/types",
    "clean:dist": "rimraf dist"
  },
  "packageManager": "pnpm@8.3.1",
  "peerDependencies": {
    "eslint": "^8",
    "typescript": ">=5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@typescript-eslint/utils": "^6.7.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.28.1"
  }
}
